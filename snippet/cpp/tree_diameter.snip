  template< typename T >
  pair< T, int > tree_dfs(const WG< T > &g, int idx, int par) {
    pair< T, int > ret(0, idx);
    for(auto &e : g[idx]) {
      if(e.to == par) continue;
      auto cost = dfs(g, e.to, idx);
      cost.first += e.cost;
      ret = max(ret, cost);
    }
    return ret;
  }

  template< typename T >
  T tree_diameter(const WG< T > &g) {
    auto p = tree_dfs(g, 0, -1);
    auto q = tree_dfs(g, p.second, -1);
    return (q.first);
  }
