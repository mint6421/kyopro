  int fac[310000];

  int inv(int x){
    if(x==1) return 1;
    return (M-M/x)*inv(M%x)%M;
  }


  int comb(int n,int k){
    int x=(fac[k]*fac[n-k])%M;
    return (fac[n]*inv(x))%M;
  }

  int fac_init(int n){
    fac[0]=1;
    FOR(i,1,n+1){
      fac[i]=fac[i-1]*i;
      fac[i]%=M;
    }
  }

